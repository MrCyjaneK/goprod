FROM mrcyjanek/goprod:core

RUN apt install -y gcc-mingw-w64-x86-64-win32 g++-mingw-w64-x86-64-win32
RUN apt install -y gcc-mingw-w64-i686-win32 g++-mingw-w64-i686-win32

#COPY usr/golang/stdreq /a
